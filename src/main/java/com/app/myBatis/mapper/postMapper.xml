<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="post">
 	
 	<insert id="insert" parameterType="postVO">
 		INSERT INTO TBL_POST VALUES (SEQ_POST.NEXTVAL, #{postTitle}, #{postContent})
 	</insert>
 	
 	<select id="selectAll" resultType="postVO">
 		SELECT ID, POST_TITLE, POST_CONTENT FROM TBL_POST
 	</select>
 	
 	<select id="select" parameterType="long" resultType="postVO">
 		SELECT ID, POST_TITLE, POST_CONTENT FROM TBL_POST WHERE ID = #{id}
 	</select>
 	
 	<update id="update" parameterType="postVO">
 		UPDATE TBL_POST SET POST_TITLE = #{postTitle}, POST_CONTENT = #{postContent} WHERE ID = #{id}
 	</update>
 	
 	<delete id="delete" parameterType="long">
 		DELETE FROM TBL_POST WHERE ID = #{id}
 	</delete>
</mapper>