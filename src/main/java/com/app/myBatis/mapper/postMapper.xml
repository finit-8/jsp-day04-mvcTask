<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="post">
 	
 	<insert id="write" parameterType="postVO">
 		INSERT INTO TBL_POST VALUES (SEQ_POST.NEXTVAL, #{postTitle}, #{postContent})
	</insert>
   	
   	<select id="selectAll" resultType="postVO">
   		SELECT ID, POST_TITLE, POST_CONTENT FROM TBL_POST
   	</select>
   	
   	<select id="select" parameterType="Long" resultType="postVO">
   		SELECT ID, POST_TITLE, POST_CONTENT FROM TBL_POST WHERE ID = #{id}
   	</select>
</mapper>